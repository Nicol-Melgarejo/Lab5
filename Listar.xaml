<Window x:Class="LAB05.Listar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB05"
        mc:Ignorable="d"
        Title="Listar" Height="565" Width="924">
    <Grid Margin="0,0,10,14">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="475" Width="735">
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="15" Background="#FFF3F3F3" Width="735" Height="407">
                <StackPanel Margin="20">
                    <Label HorizontalAlignment="Center" FontSize="30" FontFamily="Segoe UI" FontStyle="Italic" Foreground="#FF404040" FontWeight="Bold" Content="LISTA DE EMPLEADOS"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" Height="283">
                        <DataGrid x:Name="dataGridEmpleados" Height="286" Width="691" />
                    </ScrollViewer>

                </StackPanel>

            </Border>
            <Button Width="126" Height="28" Margin="0 20" Background="#FFFF7F7F" FontWeight="Bold" Content="Salir" Foreground="White" FontFamily="Segoe UI" FontSize="14" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
